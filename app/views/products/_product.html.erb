<article>
  <%= link_to product_path(product), class: 'product_link' do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>

<div>
  <% if product.quantity == 0 %>
    <button class='soldout' disabled=true>SOLD OUT!</button>
    <button class='btn' type="submit" disabled= true>
    <i class="fa fa-shopping-cart"></i>
     Add </button>
    </div>
    </article>

  
<% else %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>

    </div>
</article>
<% end %>


